`timescale 1ns / 1ps

module keyExpansion_tb;

    parameter nk = 4;
    parameter nr = 10;

    reg clk;
    reg [(nk * 32) - 1:0] key;
    wire [(128 * (nr + 1)) - 1:0] w;

    keyExpansion #(nk, nr) dut (
        .clk(clk),
        .key(key),
        .w(w)
    );

    always #5 clk = ~clk;

    integer j;

    initial begin
     
        clk = 0;
        key = 128'h2b7e151628aed2a6abf7158809cf4f3c;  // Key máº«u chuáº©n

        #200;

        $display("Round Keys:");
        for (j = 0; j < 11; j = j + 1) begin
    $display("Round %0d: %h", j, w[((10 - j)*128) +: 128]);
end

    end

endmodule
