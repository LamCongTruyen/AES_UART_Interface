`timescale 1ns / 1ps

module KeyExp_tb;

    logic [7:0] key     [0:15],
	 logic [7:0] round0  [0:15],
    logic [7:0] round1  [0:15],
    logic [7:0] round2  [0:15],
    logic [7:0] round3  [0:15],
    logic [7:0] round4  [0:15],
    logic [7:0] round5  [0:15],
    logic [7:0] round6  [0:15],
    logic [7:0] round7  [0:15],
    logic [7:0] round8  [0:15],
    logic [7:0] round9  [0:15],
    logic [7:0] round10 [0:15]

  // Gọi module AES1 (DUT - Device Under Test)
  KeyExp dut (
    .key(keys),
    .round0(round0),.round1(round1),.round2(round2),.round3(round3),.round4(round4),
    .round5(round5),.round6(round6),.round7(round7),.round8(round8),.round9(round9),
  );

  // Sinh tín hiệu kiểm tra
  initial begin
    logic[127:0] keys       = 128'h0f1571c947d9e8590cb7add6af7f6798;
	 for (int i = 0; i < 16; i++) begin
      key[i] = keys[127 - i*8 -: 8];
    end
    #1000; // chờ mô phỏng 20ns
  end

endmodule